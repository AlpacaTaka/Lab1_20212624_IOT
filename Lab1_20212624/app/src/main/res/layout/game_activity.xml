<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/game_main">



    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="APPSIoT - TeleAhorcado"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/tvPalabra"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:letterSpacing="0.2"
        android:text="_ _ _ _ _ _"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />



    <LinearLayout
        android:id="@+id/llTeclado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvPalabra">

        <!-- Fila 1 (A-G) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnA"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="A" />

            <Button
                android:id="@+id/btnB"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="B" />

            <Button
                android:id="@+id/btnC"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="C" />

            <Button
                android:id="@+id/btnD"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="D" />

            <Button
                android:id="@+id/btnE"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="E" />

            <Button
                android:id="@+id/btnF"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="F" />

            <Button
                android:id="@+id/btnG"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="G" />
        </LinearLayout>

        <!-- Fila 2 (H-N) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnH"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="H" />

            <Button
                android:id="@+id/btnI"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="I" />

            <Button
                android:id="@+id/btnJ"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="J" />

            <Button
                android:id="@+id/btnK"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="K" />

            <Button
                android:id="@+id/btnL"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="L" />

            <Button
                android:id="@+id/btnM"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="M" />

            <Button
                android:id="@+id/btnN"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="N" />
        </LinearLayout>

        <!-- Fila 3 (O-U) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnO"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="O" />

            <Button
                android:id="@+id/btnP"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="P" />

            <Button
                android:id="@+id/btnQ"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="Q" />

            <Button
                android:id="@+id/btnR"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="R" />

            <Button
                android:id="@+id/btnS"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="S" />

            <Button
                android:id="@+id/btnT"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="T" />

            <Button
                android:id="@+id/btnU"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="U" />
        </LinearLayout>

        <!-- Fila 4 (V-Z) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnV"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="V" />

            <Button
                android:id="@+id/btnW"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="W" />

            <Button
                android:id="@+id/btnX"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="X" />

            <Button
                android:id="@+id/btnY"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="Y" />

            <Button
                android:id="@+id/btnZ"
                style="@style/LetterButtonStyle"
                android:layout_margin="2dp"
                android:text="Z" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="181dp"
        android:layout_height="278dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.347"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/antenna" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="136dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/head" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="18dp"
        android:layout_height="59dp"
        android:layout_marginTop="176dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/torso" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="41dp"
        android:layout_height="25dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="184dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/derecho" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="41dp"
        android:layout_height="25dp"
        android:layout_marginStart="208dp"
        android:layout_marginTop="232dp"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/derecho" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:layout_marginTop="184dp"
        android:layout_marginEnd="136dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/izq" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="36dp"
        android:layout_height="24dp"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="136dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/toolbar"
        app:srcCompat="@drawable/izq" />

    <TextView
        android:id="@+id/estadojuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="¡Adivina la palabra!"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nuevojuego" />

    <Button
        android:id="@+id/nuevojuego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Nuevo juego"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llTeclado" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:contentDescription="Usar comodín"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/star2" />

    <TextView
        android:id="@+id/contadorestrella"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="0/3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:scaleType="fitCenter"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        app:srcCompat="@drawable/estadisticas"
        tools:visibility="visible" />


</androidx.constraintlayout.widget.ConstraintLayout>